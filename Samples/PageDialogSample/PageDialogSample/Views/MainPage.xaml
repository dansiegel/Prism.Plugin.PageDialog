<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PageDialogSample.Views.MainPage"
             Title="MainPage">
  <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
    <Button Text="Display Alert" Command="{Binding DisplayAlertCommand}" />
    <Button Text="Display ActionSheet" Command="{Binding DisplayActionSheetCommand}" CommandParameter="False" />
    <Button Text="Display ActionSheet with Message" CommandParameter="True" />
  </StackLayout>
</ContentPage>